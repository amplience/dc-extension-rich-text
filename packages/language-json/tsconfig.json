{
    "compilerOptions": {
      "target": "es6",
      "outDir": "./dist",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react",
      "baseUrl": "./packages",
      "noEmitOnError": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.stories.*",
      "**/*.scss"
    ]
}